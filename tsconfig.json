{
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "test",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}